{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="col-md-4">
            <form method="post" class="border rounded p-4 shadow">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="alert alert-info mb-3">
                        Vous êtes connecter avec l'utilisateur {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter ?</a>
                    </div>
                {% endif %}

                <h1 class="h4 mb-3 text-center font-weight-normal">S'inscrire</h1>

                <div class="form-group">
                    <label for="username" class="form-label">Mail</label>
                    <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                </div>

                <div class="form-group">
                    <input type="checkbox" id="remember_me" name="_remember_me">
                    <label for="remember_me">Se souvenir de moi</label>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-lg btn-primary w-100 mt-3" type="submit">
                    Se connecter
                </button>
            </form>
        </div>
    </div>
{% endblock %}
